<%= form_for @employee do |f| %>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :alias %><br>
    <%= f.text_field :alias %><br><br>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :office %><br>
    <%= f.text_field :office %><br><br>

    <%= f.label :img_url %><br>
    <%= f.text_area :img_url %><br><br>

    Add a Dog:<br>
    <%= f.fields_for :dog_id do |dog_form| %>
        <%= dog_form.collection_select :dog_id, Dog.all, :id, :name %>
    <% end %><br><br>

    <%= f.submit %><br>
<% end %>