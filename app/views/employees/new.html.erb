<h1>New Employee Form</h1>

<% if @employee.errors.full_messages.any? %>
  <% @employee.errors.full_messages.each do |error_message| %>
    <%= error_message %> <br />
  <% end %>
<% end %>
<br>

<%= form_for @employee do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :alias %>
    <%= f.text_field :alias %><br>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :office %>
    <%= f.text_field :office %><br>

    <label for="dog_img_url">Link to image of person</label>:
    <%= f.text_field :img_url %><br>

    <%= f.label :dog %>
    <%= f.collection_select :dog_id, Dog.order(:name), :id, :name %>

    <%= f.submit %>
<% end %>